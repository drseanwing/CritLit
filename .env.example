# CritLit Systematic Literature Review Pipeline - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# =============================================================================
# Password for PostgreSQL database user (slr_user)
# Generate a strong password for production use
POSTGRES_PASSWORD=change_me_to_secure_password

# =============================================================================
# N8N WORKFLOW AUTOMATION CONFIGURATION
# =============================================================================
# N8N web interface basic authentication credentials
N8N_USER=admin
N8N_PASSWORD=change_me_to_secure_password

# N8N encryption key for storing credentials securely
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=change_me_to_random_32_byte_hex_string

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# PubMed API Key (optional but recommended for higher rate limits)
# Obtain from: https://www.ncbi.nlm.nih.gov/account/settings/
PUBMED_API_KEY=your_ncbi_api_key_here

# Contact email for PubMed API requests (required by NCBI)
CONTACT_EMAIL=researcher@example.edu

# Anthropic Claude API Key (for extraction and synthesis tasks)
# Obtain from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI API Key (for risk of bias assessment with GPT-4o)
# Obtain from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# UQ Library Primo API Key (contact UQ Library IT for institutional access)
# This is optional and only needed if you have UQ institutional access
PRIMO_API_KEY=your_institutional_primo_key_here

# =============================================================================
# OLLAMA LOCAL LLM CONFIGURATION
# =============================================================================
# Ollama base URL (default: http://ollama:11434)
OLLAMA_BASE_URL=http://ollama:11434

# Ollama model to use for screening (will be pulled on first use)
# Options: llama3.1:8b, llama3.1:70b
OLLAMA_SCREENING_MODEL=llama3.1:8b

# =============================================================================
# I-LIBRARIAN PDF MANAGEMENT
# =============================================================================
# Maximum upload file size for I-Librarian
ILIBRARIAN_UPLOAD_MAX_SIZE=100M

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Batch size for screening operations (documents per batch)
SCREENING_BATCH_SIZE=50

# Confidence threshold for automatic inclusion decisions (0.0 to 1.0)
# Decisions below this threshold require human review
SCREENING_CONFIDENCE_THRESHOLD=0.85

# Maximum retries for external API calls
MAX_API_RETRIES=3

# Retry delay in seconds for external API calls
API_RETRY_DELAY=5
